<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="@dimen/min_tappable_size"
  android:layout_margin="@dimen/margin1x"
  android:background="@drawable/view_section_background"
  android:elevation="2dp"
  tools:ignore="UnusedAttribute">

  <TextView
    android:id="@+id/sectionName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin2x"
    android:layout_marginEnd="@dimen/margin2x"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="View animator framework" />

</androidx.constraintlayout.widget.ConstraintLayout>