<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="140dp"
  android:layout_margin="16dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/java"
    android:padding="16dp">

    <TextView
      android:id="@+id/animationName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textAlignment="textEnd"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="View animation framework" />

    <View
      android:id="@+id/switchBackground"
      android:layout_width="80dp"
      android:layout_height="40dp"
      android:background="@drawable/property_animator_switch_background"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <View
      android:id="@+id/switchBall"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_marginStart="4dp"
      android:background="@drawable/property_animator_switch_ball_background"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="@id/switchBackground"
      app:layout_constraintTop_toTopOf="parent" />

    <View
      android:id="@+id/button"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:clickable="true"
      android:focusable="true"
      app:layout_constraintBottom_toBottomOf="@id/switchBackground"
      app:layout_constraintEnd_toEndOf="@id/switchBackground"
      app:layout_constraintStart_toStartOf="@id/switchBackground"
      app:layout_constraintTop_toTopOf="@id/switchBackground" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
